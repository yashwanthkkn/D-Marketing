<%- include("partials/authHeader") %>
<div class="h4 mt-3 text-o">Recover Password</div>             
<form id="login" class="mt-4" method="POST" action="/forgotPassword/user">
    <div class="input-group">
        <div class="input-group-prepend">
            <div class="input-group-text text-o"><i class="fas fa-user"></i></div>
        </div>
        <input type="email" name="username" id="username" placeholder="Email" class="form-control" required>
    </div>
    <div class="text-center mt-4">
        <button class="btn bg-b text-w hv-l">Get Verification Code</button>
    </div>
    <% if(msg) { %>
      <div class="text-center mt-2 text-danger">
        <p>No such User</p>
      </div>
      <% } %>
    <div class="mt-3 text-center">
        <p></p>
        Don't have an account ? <a href="/signup" >Sign Up</a><br>
    </div>
</form>
<%- include("partials/authFooter") %>