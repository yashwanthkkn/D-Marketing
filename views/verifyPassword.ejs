<%- include("partials/authHeader") %>
<div class="h4 mt-5 text-o">Recover Password</div>             
<form id="login" class="mt-4" method="POST" action="/confirmPassword/user">
    <div class="input-group">
        <div class="input-group-prepend">
            <div class="input-group-text text-o"><i class="fas fa-user"></i></div>
        </div>
        <input type="email" name="email" id="email" placeholder="Email" class="form-control" required readonly value="<%=user.email%>">
    </div>
    <div class="input-group mt-4" >
        <div class="input-group-prepend">
            <div class="input-group-text text-o"><i class="fas fa-key"></i></div>
        </div>
        <input type="number" name="code" id="code" placeholder="Code" class="form-control" required>
    </div>
    <div class="input-group mt-4">
        <div class="input-group-prepend">
            <div class="input-group-text text-o"><i class="fas fa-key"></i></div>
        </div>
        <input type="password" name="password" id="password" placeholder="New Password" class="form-control" required minlength="6">
    </div>
    <div class="text-center mt-4">
        <button class="btn bg-b text-w hv-l">Confirm Password</button>
    </div>
    <% if(msg) { %>
        <div class="text-center mt-2 text-danger">
        <p><%=msg%></p>
        <% if(msg == 'Password Changed Successfully') { %>
            <a href="/login" class="mt-2">Login Now</a>
        <%}%>
        </div>
        <% } %>
    <div class="mt-3 text-center">
        <p></p>
    </div>
</form>
<%- include("partials/authFooter") %>