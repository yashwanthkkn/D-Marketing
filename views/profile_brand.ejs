<%- include("partials/header") %>
<%- include("partials/nav") %>
<div class="container-fluid">
    <div class="row">
        <!-- Profile Pic -->
        <%- include("profile/dp") %>
        <div class="col-12 text-center mt-2">
            <small class="text-d-us"></small>
        </div>
        <div class="col-12 bg-white mt-2">
            <div class="row text-center py-2">
                <div class="col-6">
                    <a href="/b/profile">
                        <span class=" text-b py-2 border-b-b">Brand</span>
                    </a>
                </div>
                <div class="col-6">
                    <a href="/p/profile">
                        <span class="text-d-us">Page</span>
                    </a>
                </div>
            </div>
        </div>
        <!-- Profile Info -->
        <div class="col-12 mt-3">
            <fieldset>
                <legend class="text-b">Brand / User Info</legend>
                <%if(brand.brand_info){%>

                    <div class="row bg-white py-3">
                        <div class="col-12 col-lg-6">
                            <div class="form-group">
                                <label for="profile_name">Your Name or Brand Name :</label>
                                <p class="form-control"><%= brand.brand_name%></p>
                            </div>
                        </div>
                        <div class="col-12 mt-3">
                            <label for="about">Interested In</label>
                            <br>
                            <small class="text-d-us">For Better Suggestions</small>
                            <br>
                            <p></p>
                            <div class="row">
                                <%brand.brand_cat.forEach(cat=>{%>
                                    <div class="col-6 col-lg-4">
                                            <input type="checkbox" checked name="page_cat" id="<%=cat%>" value="<%=cat%>">
                                            <label for="<%=cat%>"><%=cat%></label>
                                    </div>
                                <%})%>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="text-center">
                                <a href="/b/profile/edit/brandinfo">
                                    <button class="btn bg-b text-w">Edit</button>
                                </a>
                            </div>
                        </div>
                    </div>
                <%}else{%>
                    <div class="row bg-white py-3">
                        <div class="col-12">
                            <div class="text-center">
                                <p>You have not updated any info about your page</p>
                                <a href="/b/profile/edit/brandinfo">
                                    <button class="btn bg-b text-w">Update Info</button>
                                </a>
                            </div>
                        </div>
                    </div>
                <%}%>
                
            </fieldset>
        </div>
        <!-- Payment Info -->
        <div class="col-12 mt-3">
            <fieldset>
                <legend class="text-b">Payment Info</legend>
                <p class="text-d-us">For Receiving Payments</p>
                <%if(brand.brand_payment_info){%>
                    <div class="row bg-white py-2">
                        <div class="col-12 col-lg-6">
                            <div class="form-group">
                                <label for="payment_type">Payment Type :</label>
                                <p class="form-control"><%= brand.brand_payment_type%></p>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6">
                            <div class="form-group">
                                <label for="profile_name">Linked Mobile Number :</label>
                                <p class="form-control "><%= brand.brand_payment_number%></p>
                                <small class="text-d-us">In case of refund, This Number will be used</small>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="text-center">
                                <a href="/b/profile/edit/paymentinfo">
                                    <button class="btn bg-b text-w">Edit</button>
                                </a>
                            </div>
                        </div>
                    </div>
                <%}else{%>
                    <div class="row bg-white py-3">
                        <div class="col-12">
                            <div class="text-center">
                                <p>You have not updated any info about your page</p>
                                <a href="/b/profile/edit/paymentinfo">
                                    <button class="btn bg-b text-w">Update Info</button>
                                </a>
                            </div>
                        </div>
                    </div>
                <%}%>
              
            </fieldset>
        </div>
    </div>
</div>
<%- include("partials/footer") %>