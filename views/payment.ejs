<%- include("partials/header") %>
<%- include("partials/nav") %>
<div class="container-fluid">
    <div class="row">
        <%- include("partials/menu") %>
        <div class="col-12 mt-2">
            <h5 class="text-b">Payments</h5>
        </div>
        <div class="col-12 mt-3">
            <table class="table bg-white rounded">
                <tr>
                    <th>Date</th>
                    <th>Name</th>
                    <th>Payment</th>
                </tr>
                <%adds.forEach(add=>{%>
                    <tr>
                        <td><%= Moment(Number(add.createdAt)).format("MMM Do YY"); %></td>
                        <td><%=add.name%></td>
                        <td>
                            <a href="/user/billing/<%=add.uuid%>">
                                <button class="btn btn-sm text-w bg-y">Pay<i class="fas fa-rupee-sign ml-2"></i> <%=add.totalPrice%></button>
                            </a>
                        </td>
                    </tr>
                <%})%>
            </table>
        </div>

        <!-- // logs -->
        <div class="col-12 mt-2">
            <h5 class="text-b">Logs</h5>
        </div>
        <div class="col-12 mt-3">
            <table class="table bg-white rounded">
                <tr>
                    <th>Name</th>
                    <th>Date</th>
                    <th>Type</th>
                    <th>Amount</th>
                </tr>
                <tr>
                    <td>Event Shout</td>
                    <td>12.2.22</td>
                    <td>DEB</td>
                    <td>
                        <span class="text-danger">- <i class="fas fa-rupee-sign"></i> 300</span>
                    </td>
                </tr>
                <tr>
                    <td>Hylet</td>
                    <td>12.3.22</td>
                    <td>CED</td>
                    <td>
                        <span class="text-success">+ <i class="fas fa-rupee-sign"></i> 300</span>
                    </td>
                </tr>
                <tr>
                    <td>Hylet</td>
                    <td>14.3.22</td>
                    <td>REF</td>
                    <td>
                        <span class="text-success">+ <i class="fas fa-rupee-sign"></i> 400</span>
                    </td>
                </tr>
            </table>
        </div>

    </div>
</div>


